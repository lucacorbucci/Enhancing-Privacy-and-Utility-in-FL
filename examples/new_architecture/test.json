{
    "dataset": "mnist",
    "mode": "classic",
    "task": "federatedlearning",
    "debug": true,
    "save_model": false,
    "federated": true,
    "wandb": false,
    "data_split_config": {
        "split_type": "stratified",
        "num_classes": 10,
        "num_nodes": 1,
        "num_clusters": 1000,
        "noniid_nodes_distribution": false,
        "num_classes_per_cluster": 1000,
        "server_validation_set": "server_validation_split"
    },
    "server_config": {
        "differential_privacy_server": true,
        "mixed_mode": false,
        "local_epochs": 1,
        "fl_rounds": 5
    },
    "hyperparameters": {
        "batch_size": 32,
        "lr": 0.001,
        "MAX_PHYSICAL_BATCH_SIZE": 128,
        "DELTA": 1e-5,
        "noise_multiplier": 0.5,
        "max_grad_norm": 1.2,
        "weight_decay": 0,
        "min_improvement": 0.001,
        "patience": 10,
        "min_accuracy": 0.80
    },
    "gpu_config": [
        "cuda:0",
        "cuda:0"
    ]
}