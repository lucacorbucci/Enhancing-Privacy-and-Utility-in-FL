{
    "dataset": "mnist",
    
    "mode": "semi_p2p",
    "task": "federatedlearning",
    "debug": true,
    "save_model": false,
    "federated": true,
    "wandb": true,
    "data_split_config": {
        "split_type": "percentage",
        "num_classes": 10,
        "num_nodes": 3,
        "num_clusters": 3,
        "noniid_nodes_distribution": false,
        "num_classes_per_cluster": 10,
        "server_validation_set": "server_validation_split",
        "percentage_configuration": {
            "cluster_0": {
                "0": 80,
                "1": 80,
                "2": 80,
                "3": 80,
                "4": 20,
                "5": 20,
                "9": 20
            },
            "cluster_1": {
                "4": 80,
                "5": 80,
                "6": 80,
                "7": 20,
                "8": 20,
                "3": 20
            },
            "cluster_2": {
                "7": 80,
                "8": 80,
                "9": 80,
                "6": 20,
                "0": 20,
                "1": 20,
                "2": 20
            }
        }
    },
    "p2p_config": {
        "differential_privacy_pre_training_cluster": false,
        "differential_privacy_mixed_mode_cluster": false,
        "local_training_epochs_in_cluster": 1,
        "num_communication_round_pre_training": [
            10
        ],
        "num_communication_round_mixed_mode": 2
