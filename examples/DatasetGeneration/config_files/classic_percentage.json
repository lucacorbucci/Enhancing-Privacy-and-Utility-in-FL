        "noise_multiplier": [
            2.0
        ],
        "noise_multiplier_P2P": [
            2.0
        ],
        "max_grad_norm": [
            1.2
        ],
        "weight_decay": 0,
        "min_improvement": 0.001,
        "patience": 10,
        "min_accuracy": 0.80
    }
